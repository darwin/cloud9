<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:tab id="tabDocumentation" skin="docktab" visible="false" activepage="0" buttons="close">
        <a:page id="inAppDocs" caption="Documentation" render="runtime" prerender="true">
            <a:hbox class="docs-header" align="center" edge="0 4 4" height="37" padding="3">
                <a:button id="btnDocNavHome"
                  skin     = "btn-docs-nav" 
                  skinset  = "documentation" 
                  class    = "home" 
                  disabled = "true"
                  visible  = "false"
                  onclick  = "require('ext/documentation/documentation').goHome()" />
                <a:button id="btnDocNavBwr"
                  skin     = "btn-docs-nav" 
                  skinset  = "documentation"  
                  class    = "backwards" 
                  disabled = "true" 
                  onclick  = "require('ext/documentation/documentation').goBwr()" />
                <a:button id="btnDocNavFwr"
                  skin     = "btn-docs-nav" 
                  skinset  = "documentation" 
                  class    = "forward" 
                  disabled = "true" 
                  onclick  = "require('ext/documentation/documentation').goFwr()" />
                <a:filler />
                <a href="https://docs.c9.io/" target="_blank" class="open-docs-page" pack="end"><span class="icon"></span></a>
            </a:hbox>
            <a:bar id="barDocsNav"
              class     = "scroll-pane" 
              scrollbar = "sbShared 37 0 0" 
              flex      = "1" 
              visible2="false"
              overflow  = "hidden"
              anchors   = "33 0 0 0">
                <a:textbox id="tbDocsSearch" 
                  margin = "5 0 4"
                  skin   = "searchbox_textbox"
                  class  = "docs_searchbox"
                  initial-message = "Search" />
                <div id="docsToc" onclick="require('ext/documentation/documentation').userClickEvent(event)"><?lm
                    var docExt = require('ext/documentation/documentation');
                    docExt.cleanDocUrls(docExt.docsData.toc);
                ?></div>
            </a:bar>
            <a:bar id="barDocsContent"
              visible="false" 
              class   = "doc-page" 
              anchors = "33 0 0 0">
				<a:bar class="content" scrollbar="sbShared 4 0 0" anchors="0 0 0 0">
                    <a:text id="textCurrentDoc" 
                      value   = "" 
                      skin    = "text-docs" 
                      skinset = "documentation" />
                    <div class="docs-footer">
                        <a:vbox class="docs-link-section" align="center" edge="12 0 0">
                            <a:hbox align="center" padding="5"> 
                                <a href="" target="_blank" class="comment">Comments</a>
                                <a:divider />
                                <a href="" target="_blank" class="subscribe">Subscribe</a>
                                <a:divider />
                                <a href="http://twitter.com/cloud9ide" target="_blank" class="twitter"></a>
                                <a href="https://c9.io/site/feed/" target="_blank" class="rss"></a>
                            </a:hbox>
                        </a:vbox>
                    </div>
				</a:bar>
            </a:bar>
        </a:page>
    </a:tab>
</a:application>